{
  "name": "minimal-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "prebuild": "npm run generate-covers",
    "start": "next start",
    "lint": "next lint",
    "generate-covers": "node scripts/generate-all-covers.js",
    "generate-covers:force": "node scripts/generate-all-covers.js --force",
    "setup-covers": "pip3 install -r scripts/requirements.txt && npm run generate-covers:force",
    "predeploy": "npm run setup-covers && git add posts/ public/covers/ && git commit -m 'chore: update covers' || true"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "gray-matter": "^4.0.3",
    "next": "^14.2.33",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.19.23",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3"
  }
}
